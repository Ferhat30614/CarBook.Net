@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-8 block-9 mb-md-5">
    <form action="#" class="bg-light p-5 contact-form">

        <div class="form-group">
            <input type="text" class="form-control" readonly placeholder="Almak İstedğiniz Araba ">
        </div>
        <label>Adınzı</label>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Adınız">
        </div>
        <label>Soyadınız</label>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Soyadınız">
        </div> 
        <label>Mail Adresiniz</label>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Mail adresiniz">
        </div> 
        <label>Telefon Numaranız</label>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Telefon Numaranız">
        </div>
        <label>Alınmak İstenen Lokasyon</label>
        <div class="form-group">            
            @Html.DropDownListFor(x=>x.LocationID,(List<SelectListItem>)ViewBag.v,new{@class="form-control"})
        </div>
        <label>İade Edilecek Lokasyon</label>
        <div class="form-group">
            @Html.DropDownListFor(x=>x.LocationID,(List<SelectListItem>)ViewBag.v,new{@class="form-control"})            
        </div> 
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Ehliyet Yılınız">
        </div>
        <div class="form-group">
            <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Varsa eklemek istedikleriniz"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>

    </form>

</div>

