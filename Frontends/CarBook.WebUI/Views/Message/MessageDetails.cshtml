@{
    ViewData["Title"] = "MessageDetails";   
    Layout = null;
}

@model List<ResultMessageDetailsDto>





<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/signalR/signalr.min.js"></script>
<script src="~/js/signalr_client_message.js"></script>


<div class="user-info">
    <div class="user-photo">

        <img src="/carbook-master/images/person_1.jpg" alt="Kullanıcı Adı">
    </div>
    <div class="user-details">
        <h4>@Model[0].OtherUserName</h4>
        <p>Mesajlaşılan kişi</p>
    </div>
</div>

<div class="message-container">
    <div class="messages">
        @if (Model.Count > 0 && Model[0].SenderID != 0)
        {
            @foreach (var message in Model)
            {
                <div class="message @((message.SenderID == @ViewBag.UserId) ? "sent" : "received")">
                    <div class="message-content">
                        <p>@message.Content</p>
                        <span class="message-time">@message.CreatedDate.Value.ToString("HH:mm")</span>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-message">
                <p>Henüz mesaj yok.</p>
            </div>
        }
    </div>
    <form asp-controller="Message" asp-action="CreateMessage" method="post" class="message-form">
        <input type="hidden" name="ReceiverId"  id="otherUserId" value="@ViewBag.OtherUserId" />
        <input type="hidden" name="SenderID" id="currentUserId" value="@ViewBag.UserId" />
        <textarea name="Content" class="form-control"  id="replyMessageContent"  placeholder="Yanıtınızı yazın..." rows="3"></textarea>
        <button type="button" id="btn-send-message" class="btn btn-success btn-sm mt-2">Gönder</button>
    </form>
</div>



<style>
    .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
        position: fixed;
        top: 10px;
        left: 20px;
        z-index: 1000;
        background-color: #fff;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .user-photo img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-top: 5px;
    }

    .user-details h4 {
        margin: 0;
        font-size: 18px;
        color: #333;
    }

    .user-details p {
        margin: 5px 0;
        font-size: 14px;
        color: #888;
    }

    .message-container {
        max-width: 800px;
        margin: 120px auto 20px;
        padding: 10px;
    }

    .messages {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .no-message {
        text-align: center;
        font-size: 16px;
        color: #888;
        padding: 20px;
        background-color: #f8f8f8;
        border-radius: 10px;
        border: 1px dashed #ddd;
    }

    .message {
        display: flex;
        max-width: 70%;
        margin-bottom: 10px;
        word-wrap: break-word;
    }

        .message.sent {
            align-self: flex-end;
            background-color: #dcf8c6;
            border-radius: 10px;
            padding: 10px;
        }

        .message.received {
            align-self: flex-start;
            background-color: #fff;
            border-radius: 10px;
            padding: 10px;
            border: 1px solid #ddd;
        }

    .message-content p {
        margin: 0;
        font-size: 14px;
    }

    .message-time {
        font-size: 12px;
        color: #888;
        display: block;
        margin-top: 5px;
    }

    .message-form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
    }

        .message-form textarea {
            resize: none;
        }

        .message-form button {
            align-self: flex-end;
        }

</style>




