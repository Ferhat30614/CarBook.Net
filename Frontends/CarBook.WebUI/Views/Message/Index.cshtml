@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


@model List<ResultMessageByCurrentUserDto>

<div class="user-messages-container">
    @foreach (var message in Model)
    {
        <a href="/Message/MessageDetails/@message.OtherUserID" class="user-message-link">
            <div class="user-message">
                <div class="user-photo">
                    <img src="/carbook-master/images/person_1.jpg" alt="@message.OtherUserName">
                    @if (message.NumberOfUnReadMessagesCount > 0)
                    {
                        <span class="unread-count">@message.NumberOfUnReadMessagesCount</span>
                    }
                </div>
                <div class="user-details">
                    <h4>@message.OtherUserName</h4>
                    <p>@message.LastMessageContent</p>
                    <span class="message-date">@message.LastMessageDate</span>
                </div>
                <div class="view-details">
                    <span>Mesaj Detayları</span>
                </div>
            </div>
        </a>
    }
</div>




<style>
    /* Container for all user messages */
    .user-messages-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    /* Each individual user message */
    .user-message {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    /* User's photo */
    .user-photo {
        position: relative;
        margin-right: 15px;
    }

        .user-photo img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

    /* Unread message count */
    .unread-count {
        background-color: #ff3b30;
        color: white;
        padding: 5px 10px;
        border-radius: 50%;
        font-size: 12px;
        position: absolute;
        top: -5px;
        right: -5px;
        min-width: 18px;
        text-align: center;
    }

    /* User's details */
    .user-details {
        flex-grow: 1;
    }

        .user-details h4 {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        .user-details p {
            font-size: 14px;
            color: #777;
            margin: 5px 0;
        }

    .message-date {
        font-size: 12px;
        color: #aaa;
    }

    /* View details button */
    .view-details {
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

        .view-details span {
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
        }

            .view-details span:hover {
                text-decoration: underline;
            }

</style>