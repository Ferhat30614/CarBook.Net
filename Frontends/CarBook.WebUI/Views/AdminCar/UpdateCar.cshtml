
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateCarDto

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Araç ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden
                            sonra Güncelle butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="CarID"/>
                            <div class="form-group">
                                <label for="exampleInput">Marka</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues,
                                         new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">vites türü</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Koltuk sayısı</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Bagaj sayısı</label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel">Yakıt türü</label>
                                <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>


            </div>

        </div>

    </div>
</div>

