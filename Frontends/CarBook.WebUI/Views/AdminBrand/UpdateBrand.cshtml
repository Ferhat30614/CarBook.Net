
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateBrandDto

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç Markası Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Marka ile ilgili Güncellemeleri aşadağıki kutucağa giebilirsiniz. Veri girişinden
                            sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.
                        </p>
                        <form method="post">

                            <input type="hidden" asp-for="BrandID" />

                            <div class="form-group">
                                <label for="exampleInputName">Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>


            </div>

        </div>

    </div>
</div>

