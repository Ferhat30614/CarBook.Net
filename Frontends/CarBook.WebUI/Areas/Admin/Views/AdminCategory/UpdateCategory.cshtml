
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


@model UpdateCategoryDto
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Güncelleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Kategori alanına güncellemek istediğiniz veri girişini aşağıdaki panelden yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="CategoryID" />
                            <div class="form-group">
                                <label for="exampleInputName">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>


            </div>

        </div>

    </div>
</div>

