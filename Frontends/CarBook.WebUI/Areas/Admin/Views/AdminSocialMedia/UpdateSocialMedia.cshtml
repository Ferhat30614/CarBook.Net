
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}





@model UpdateSocialMediaDto
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal medya sayfası veri giriş alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal medya hesaplarınıza ait veri girişlerini buradan yapabilirsiniz. Yeni bir sosyal medya ekleyebilir, mevcut sosyal medya hesaplarınızı
                            silebilir ya da düzenleyebilirsiniz. İkonlarla ilgili listeye ikon Listesi üzerinden ulaşabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden"  asp-for="SocialMediaID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Hizmet İcon Url</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medyayı Güncelle</button>
                        </form>

                    </div>
                </div>


            </div>

        </div>

    </div>
</div>



