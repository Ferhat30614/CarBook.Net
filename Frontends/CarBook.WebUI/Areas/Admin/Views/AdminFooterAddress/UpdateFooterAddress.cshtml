
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


@model UpdateFooterAddressDto

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Adres alanına ait bilgileri aşağıdaki panelden girebilirsiniz. Tema bütünlüğünün bozulmaması
                            adına lütfen sadece 1 tane veri girişi yapınız. Mevcutta veriniz varsa düzenleyiniz. Yeni veri
                            girişi yaparsanız öncekini siliniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="FooterAddressID" />
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon Numarası</label>
                                <input type="text" class="form-control" id="exampleInputPhone" asp-for="Phone">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Email Adresi</label>
                                <input type="text" class="form-control" id="exampleInputEmail" asp-for="Email">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adresi Kaydet</button>
                        </form>

                    </div>
                </div>


            </div>

        </div>

    </div>
</div>



