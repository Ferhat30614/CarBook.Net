
@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}





@model CreateLocationDto
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Veri Giriş Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Araçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin girildiği sayfadır.
                            Bilgileri eksiksiz olarak doldurun.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Ad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                            </div>
                           

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Konumu Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>


            </div>

        </div>

    </div>
</div>



