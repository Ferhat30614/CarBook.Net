
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateBannerDto


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Banner Bilgisini  Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                           sads.
                        </p>
                        <form method="post">

                            <input type="hidden" asp-for="BannerID" />

                            <div class="form-group">
                                <label for="exampleInputTitle">Title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title">
                            </div>
                             <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description">
                            </div>
                             <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription">
                            </div>
                             <div class="form-group">
                                <label for="exampleInputVideoUrl">Video Url Adresi</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>


            </div>

        </div>

    </div>
</div>



