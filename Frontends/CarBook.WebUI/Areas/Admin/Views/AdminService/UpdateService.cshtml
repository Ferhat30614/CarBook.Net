
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



@model UpdateServiceDto
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> Hizmet Güncelleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki sayfadan gerçekleştirebilirsiniz. Tеmа
                            bütünlüğünü korumak adına 4 tane hizmet girişi yapınız.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="ServiceID" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Hizmet İcon Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hizmeti Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



